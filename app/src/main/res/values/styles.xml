<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="resultTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingBottom">@dimen/result_view_vertical_padding</item>
        <item name="android:paddingLeft">@dimen/result_view_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/result_view_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/result_view_vertical_padding</item>
        <item name="android:textSize">@dimen/result_text_size</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="EmptyView">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>
</resources>
